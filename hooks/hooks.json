{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kin prime --for hook",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kin compact-hook --emit-context",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kin stop-guard",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "kin compact-hook --text \"Session ended\"",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
